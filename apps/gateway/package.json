{
  "name": "claude-readability-gateway",
  "version": "1.0.0",
  "description": "Gateway service for claude-readability-hook",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --production --splitting --minify --external playwright --external chromium-bidi",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "start:prod": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun biome check .",
    "lint:fix": "bun biome check --write .",
    "format": "bun biome format --write .",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": ["readability", "content-extraction", "gateway"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@mozilla/readability": "^0.6.0",
    "fastify": "^5.1.0",
    "fastify-type-provider-zod": "^5.0.2",
    "jsdom": "^26.1.0",
    "lru-cache": "^11.0.2",
    "neverthrow": "^8.0.0",
    "p-limit": "^6.2.0",
    "playwright": "^1.40.0",
    "undici": "^6.21.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
